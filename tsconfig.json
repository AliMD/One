// Reference: https://www.typescriptlang.org/tsconfig

{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["ES2020", "ScriptHost", "WebWorker", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./package",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [],
  "references": []
}