// Reference: https://www.typescriptlang.org/tsconfig

{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
